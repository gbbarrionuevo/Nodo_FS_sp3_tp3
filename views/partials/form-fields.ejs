<!-- Para formularios agregar y editar superhéroes -->
<div class="my-5 space-y-4">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <label class="block mb-1 font-medium">Nombre del superhéroe <span class="text-gray-400">(*)</span></label>
      <input type="text" name="nombreSuperHeroe" value="<%= superheroe.nombreSuperHeroe || '' %>" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" minlength="3" maxlength="60" required>
    </div>
    <div>
      <label class="block mb-1 font-medium">Nombre real <span class="text-gray-400">(*)</span></label>
      <input type="text" name="nombreReal" value="<%= superheroe.nombreReal || '' %>" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" minlength="3" maxlength="60" required>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    <div>
      <label class="block mb-1 font-medium">Edad <span class="text-gray-400">(*)</span></label>
      <input type="number" name="edad" min="0" value="<%= superheroe.edad || '' %>" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" required>
    </div>
    <div>
      <label class="block mb-1 font-medium">Planeta de origen</label>
      <input type="text" name="planetaOrigen" value="<%= superheroe.planetaOrigen || '' %>" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" minlength="3" maxlength="60">
    </div>
    <div>
      <label class="block mb-1 font-medium">Debilidad</label>
      <input type="text" name="debilidad" value="<%= superheroe.debilidad || '' %>" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" minlength="3" maxlength="60">
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    <div>
      <label class="block mb-1 font-medium">Poderes <span class="text-gray-400">(*)</span></label>
      <div id="poderes" class="space-y-2">
        <% if (superheroe.poderes && superheroe.poderes.length) { %>
          <% superheroe.poderes.forEach(p => { %>
            <div class="flex items-center gap-2 mt-2">
              <input type="text" name="poderes[]" value="<%= p %>" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" minlength="3" maxlength="60" required>
              <button type="button" title="Eliminar" onclick="if(this.parentElement.parentElement.querySelectorAll('.flex').length > 1) this.parentElement.remove()" class="border-0 bg-transparent p-0 m-0 cursor-pointer text-red-500 hover:text-red-700 focus:outline-none focus:ring-0 transition"><i class="fa-solid fa-times"></i></button>
            </div>
          <% }); %>
        <% } else { %>
          <div class="flex items-center gap-2 mt-2">
            <input type="text" name="poderes[]" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" minlength="3" maxlength="60" required>
            <button type="button" title="Eliminar" onclick="if(this.parentElement.parentElement.querySelectorAll('.flex').length > 1) this.parentElement.remove()" class="border-0 bg-transparent p-0 m-0 cursor-pointer text-red-500 hover:text-red-700 focus:outline-none focus:ring-0 transition"><i class="fa-solid fa-times"></i></button>
          </div>
        <% } %>
      </div>
      <button type="button" onclick="agregarCampo('poderes', 'poderes')" class="mt-2 text-sm text-blue-600 hover:underline focus:outline-none focus:ring-0"><i class="fa-solid fa-plus fa-xs"></i> Agregar poder</button>
    </div>

    <div>
      <label class="block mb-1 font-medium">Aliados</label>
      <div id="aliados" class="space-y-2">
        <% if (superheroe.aliados && superheroe.aliados.length) { %>
          <% superheroe.aliados.forEach(a => { %>
            <div class="flex items-center gap-2 mt-2">
              <input type="text" name="aliados[]" value="<%= a %>" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" minlength="3" maxlength="60">
              <button type="button" title="Eliminar" onclick="this.parentElement.remove()" class="border-0 bg-transparent p-0 m-0 cursor-pointer text-red-500 hover:text-red-700 focus:outline-none focus:ring-0 transition"><i class="fa-solid fa-times"></i></button>
            </div>
          <% }); %>
        <% } %>
      </div>
      <button type="button" onclick="agregarCampo('aliados', 'aliados')" class="mt-2 text-sm text-blue-600 hover:underline focus:outline-none focus:ring-0"><i class="fa-solid fa-plus fa-xs"></i> Agregar aliado</button>
    </div>

    <div>
      <label class="block mb-1 font-medium">Enemigos</label>
      <div id="enemigos" class="space-y-2">
        <% if (superheroe.enemigos && superheroe.enemigos.length) { %>
          <% superheroe.enemigos.forEach(e => { %>
            <div class="flex items-center gap-2 mt-2">
              <input type="text" name="enemigos[]" value="<%= e %>" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" minlength="3" maxlength="60">
              <button type="button" title="Eliminar" onclick="this.parentElement.remove()" class="border-0 bg-transparent p-0 m-0 cursor-pointer text-red-500 hover:text-red-700 focus:outline-none focus:ring-0 transition"><i class="fa-solid fa-times"></i></button>
            </div>
          <% }); %>
        <% } %>
      </div>
      <button type="button" onclick="agregarCampo('enemigos', 'enemigos')" class="mt-2 text-sm text-blue-600 hover:underline focus:outline-none focus:ring-0"><i class="fa-solid fa-plus fa-xs"></i> Agregar enemigo</button>
    </div>
  </div>

  <div>
    <label class="block mb-1 font-medium">Creador</label>
    <input type="text" name="creador" value="<%= superheroe.creador || '' %>" class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-800 placeholder-gray-400 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 shadow-sm" minlength="3" maxlength="60">
  </div>
</div>