<% if (typeof message !== 'undefined' && message) { %>
  <div class="max-w-7xl mx-auto mb-3 flex items-start justify-between rounded border border-green-400 bg-green-100 px-4 py-3 text-green-800 shadow" id="alert-success">
    <div>
      <strong class="text-lg font-semibold">Acci√≥n realizada</strong>
      <ul class="list-disc pl-5 mt-2 space-y-1">
        <li><%= message %></li>
      </ul>
    </div>
    <button type="button" title="Cerrar" onclick="document.getElementById('alert-success').remove()" class="border-0 bg-transparent p-0 m-0 cursor-pointer text-green-700 hover:text-green-900 focus:outline-none focus:ring-0 transition"><i class="fa-solid fa-times"></i></button>
  </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="max-w-7xl mx-auto mb-3 flex items-start justify-between rounded border border-red-400 bg-red-100 px-4 py-3 text-red-800 shadow" id="alert-error">
    <div>
      <strong class="text-lg font-semibold">Se encontraron los siguientes errores</strong>
      <% if (Array.isArray(error)) { %>
        <ul class="list-disc pl-5 mt-2 space-y-1">
          <% error.forEach(e => { %>
            <li><%= e %></li>
          <% }); %>
        </ul>
      <% } else { %>
        <p class="mt-2"><%= error %></p>
      <% } %>
    </div>
    <button type="button" title="Cerrar" onclick="document.getElementById('alert-error').remove()" class="border-0 bg-transparent p-0 m-0 cursor-pointer text-red-700 hover:text-red-900 focus:outline-none focus:ring-0 transition"><i class="fa-solid fa-times"></i></button>
  </div>
<% } %>